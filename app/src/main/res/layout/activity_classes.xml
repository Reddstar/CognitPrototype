<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ufrpe.cognit.cognitprototype.ClassesActivity"
    android:background="@drawable/classes_art">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageButton
            android:id="@+id/btn_student_activities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_student_activities"
            android:backgroundTint="@color/colorPrimary"/>
        <ImageButton
            android:id="@+id/btn_challenge"
            android:layout_below="@+id/btn_student_activities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_challenge"
            android:backgroundTint="@color/colorPrimary"/>
    </RelativeLayout>

</RelativeLayout>
